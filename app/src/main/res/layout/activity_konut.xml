<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:layout_width="377dp"
        android:layout_height="88dp"
        android:text="Konut Sigortası"
        android:textAlignment="center"
        android:textColor="#07253E"
        android:textSize="24sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/button_dask"
        android:layout_width="378dp"
        android:layout_height="wrap_content"
        android:background="#51ADD6"
        android:text="DASK Katılım"
        android:layout_marginTop="16dp"
        android:textColor="#FFFFFF" />

    <Button
        android:id="@+id/button_konut_katilim"
        android:layout_width="384dp"
        android:layout_height="wrap_content"
        android:background="#51ADD6"
        android:text="Konut Katılım"
        android:layout_marginTop="16dp"
        android:textColor="#FFFFFF" />

    <Button
        android:id="@+id/button_esyam_guvende"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#51ADD6"
        android:layout_marginTop="16dp"
        android:text="Eşyam Güvende Katılım"
        android:textColor="#FFFFFF" />

</LinearLayout>
